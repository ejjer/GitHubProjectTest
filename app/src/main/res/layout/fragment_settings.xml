<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor"
    android:orientation="vertical"
    tools:context=".view.SettingsFragment">

    <TextView
        android:id="@+id/choose_theme_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="5dp"
        android:text="@string/choose_theme" />
    <CheckBox
        android:id="@+id/dark_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dark_them"/>

    <CheckBox
        android:id="@+id/light_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/light_them" />

    <TextView
        android:id="@+id/choose_language_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        android:text="@string/choose_language" />

    <CheckBox
        android:id="@+id/english_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/english_language" />

    <CheckBox
        android:id="@+id/russian_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/russian_language"/>


</LinearLayout>